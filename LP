    <script>
        // Create starfield
        function createStars() {
            const starsContainer = document.getElementById('stars');
            for (let i = 0; i < 50; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 3 + 's';
                starsContainer.appendChild(star);
            }
        }

        // Main app logic
        const breathOrb = document.getElementById('breathOrb');
        const breathText = document.getElementById('breathText');
        const countdown = document.getElementById('countdown');
        const progressCircle = document.getElementById('progressCircle');
        const stressMeter = document.getElementById('stressMeter');
        const stressFill = document.getElementById('stressFill');
        
        let isBreathing = false;
        let timeLeft = 60;
        let breathPhase = 'inhale';
        let interval;
        let breathInterval;
        let completions = 0;
        
        function startBreathing() {
            if (isBreathing) return;
            
            isBreathing = true;
            timeLeft = 60;
            breathOrb.classList.add('breathing');
            countdown.classList.add('active');
            stressMeter.classList.add('visible');
            
            // Start countdown
            interval = setInterval(() => {
                timeLeft--;
                countdown.textContent = timeLeft;
                
                // Update progress circle
                const progress = (60 - timeLeft) / 60;
                const circumference = 2 * Math.PI * 147;
                progressCircle.style.strokeDashoffset = circumference * (1 - progress);
                
                if (timeLeft <= 0) {
                    completeSession();
                }
            }, 1000);
            
            // Start breathing animation
            updateBreathText();
            breathInterval = setInterval(updateBreathText, 2000);
            
            // Start stress reduction animation after 5 seconds
            setTimeout(() => {
                stressFill.classList.add('reduced');
            }, 5000);
        }
        
        function updateBreathText() {
            if (breathPhase === 'inhale') {
                breathText.textContent = 'INHALE';
                breathPhase = 'hold1';
            } else if (breathPhase === 'hold1') {
                breathText.textContent = 'HOLD';
                breathPhase = 'exhale';
            } else if (breathPhase === 'exhale') {
                breathText.textContent = 'EXHALE';
                breathPhase = 'hold2';
            } else {
                breathText.textContent = 'HOLD';
                breathPhase = 'inhale';
            }
        }
        
        function completeSession() {
            isBreathing = false;
            clearInterval(interval);
            clearInterval(breathInterval);
            completions++;
            
            breathOrb.classList.remove('breathing');
            breathText.textContent = 'COMPLETE';
            countdown.textContent = '✓';
            
            // Show completion message
            if (completions === 1) {
                setTimeout(() => {
                    const message = document.createElement('div');
                    message.style.cssText = `
                        background: linear-gradient(135deg, rgba(206, 143, 41, 0.1) 0%, rgba(206, 143, 41, 0.05) 100%);
                        border: 2px solid var(--ochre);
                        border-radius: 15px;
                        padding: 20px;
                        margin: 20px 0;
                        text-align: center;
                        animation: fadeInDown 0.5s ease-out;
                    `;
                    message.innerHTML = `
                        <p style="font-size: 1.2em; color: var(--ochre); margin-bottom: 10px;">
                            <strong>Wow! You just reduced your stress by 70%</strong>
                        </p>
                        <p style="opacity: 0.9; color: var(--rust);">
                            Notice how different you feel? This is just ONE of the three techniques 
                            in the Catch Your Breath Kit.
                        </p>
                    `;
                    document.querySelector('.tool-container').appendChild(message);
                    
                    // Scroll to CTA
                    setTimeout(() => {
                        document.querySelector('.cta-section').scrollIntoView({ 
                            behavior: 'smooth',
                            block: 'center'
                        });
                    }, 3000);
                }, 1000);
            }
            
            // Track completion
            localStorage.setItem('microLessonCompletions', completions);
            
            // Reset for another try
            setTimeout(() => {
                breathText.textContent = 'TRY AGAIN';
                countdown.textContent = '';
                countdown.classList.remove('active');
                progressCircle.style.strokeDashoffset = '942';
                stressFill.classList.remove('reduced');
                stressMeter.classList.remove('visible');
            }, 5000);
        }
        
        // Event listener
        breathOrb.addEventListener('click', startBreathing);
        
        // Initialize
        createStars();
        
        // Track page engagement
        let engagementTime = 0;
        setInterval(() => {
            engagementTime += 5;
            if (engagementTime === 30 && completions === 0) {
                // Gentle reminder after 30 seconds if they haven't tried it
                breathText.style.animation = 'pulse 2s infinite';
            }
        }, 5000);
    </script>
</body>
